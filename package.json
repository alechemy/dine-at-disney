{
  "name": "dine-at-disney",
  "version": "0.0.1",
  "description": "A CLI tool that checks for dining availability at Disneyland and California Adventure park restaurants.",
  "private": true,
  "types": "build/types/types.d.ts",
  "bin": {
    "dine-at-disney": "bin/dine-at-disney"
  },
  "scripts": {
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "if [ -e ./src/templates ]; then cp -a ./src/templates ./build/; fi",
    "format": "prettier --config .prettierrc.js --write **/*.{js,ts,json}",
    "build": "npm run clean-build && npm run compile && npm run copy-templates",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "tsconfig.json",
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.4",
    "cheerio": "^1.0.0-rc.10",
    "dotenv": "^10.0.0",
    "gluegun": "^4.7.0",
    "lodash-es": "^4.17.21",
    "nodemailer": "^6.6.3"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.30",
    "@types/jest": "^27.0.1",
    "@types/jsdom": "^16.2.13",
    "@types/lodash-es": "^4.17.5",
    "@types/node": "^12.7.11",
    "@types/nodemailer": "^6.4.4",
    "jest": "^27.1.1",
    "prettier": "^2.4.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
