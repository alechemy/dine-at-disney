{
  "name": "dine-at-disney",
  "version": "1.1.1",
  "description": "A CLI tool that checks for dining availability at Disneyland and California Adventure park restaurants.",
  "types": "build/types/types.d.ts",
  "bin": {
    "dine-at-disney": "bin/dine-at-disney"
  },
  "engines": {
    "node": ">=20.12"
  },
  "scripts": {
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "if [ -e ./src/templates ]; then cp -a ./src/templates ./build/; fi",
    "format": "prettier --config .prettierrc.js --write **/*.{js,ts,json}",
    "build": "npm run clean-build && npm run compile && npm run copy-templates",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "tsconfig.json",
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "gluegun": "^5.2.2",
    "nodemailer": "^8.0.1",
    "playwright": "^1.58.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/nodemailer": "^7.0.11",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "minimatch": ">=10.2.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
