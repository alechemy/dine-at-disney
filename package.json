{
  "name": "dine-at-disney",
  "version": "1.1.0",
  "description": "A CLI tool that checks for dining availability at Disneyland and California Adventure park restaurants.",
  "types": "build/types/types.d.ts",
  "bin": {
    "dine-at-disney": "bin/dine-at-disney"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "if [ -e ./src/templates ]; then cp -a ./src/templates ./build/; fi",
    "format": "prettier --config .prettierrc.js --write **/*.{js,ts,json}",
    "build": "npm run clean-build && npm run compile && npm run copy-templates",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "tsconfig.json",
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "axios": "^0.27.2",
    "dotenv": "^16.0.2",
    "gluegun": "^5.1.2",
    "lodash": "^4.17.21",
    "nodemailer": "^6.7.8"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/jsdom": "^16.2.13",
    "@types/lodash": "^4.14.185",
    "@types/node": "^12.7.11",
    "@types/nodemailer": "^6.4.4",
    "jest": "^27.1.1",
    "prettier": "^2.4.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
